{
  "build": {
    "context": "..",
    "dockerfile": "./Dockerfile",
    "target": "dev"
  },
  "init": true,
  "postCreateCommand": "pnpm install --frozen-lockfile",
  "remoteEnv": {
    "PATH": "${containerWorkspaceFolder}/node_modules/.bin:${containerEnv:PATH}"
  },
  "mounts": [
    "source=jetbrains,target=/home/developer/.cache/JetBrains/RemoteDev/dist,type=volume",
    "source=codex,target=/home/developer/.codex,type=volume",
    "source=registry,target=/home/developer/registry,type=volume"
  ],
  "forwardPorts": [5000]
}
