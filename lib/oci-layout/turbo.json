{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "inputs": ["**/*.go", "go.mod", "go.sum", "$TURBO_ROOT$/go.work"],
      "outputs": ["out/**"],
      "env": [
        "GOOS",
        "GOARCH",
        "CGO_ENABLED",
        "GOTOOLCHAIN",
        "GOFLAGS",
        "GOWORK"
      ]
    }
  }
}
